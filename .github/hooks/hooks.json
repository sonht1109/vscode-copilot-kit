{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "cwd": ".",
        "bash": ".github/scripts/hooks/dev-rules-reminder.sh",
        "timeoutSec": 10
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "command": ".github/scripts/hooks/scout-block.sh",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "command": ".github/scripts/hooks/prettier.sh",
        "cwd": ".",
        "timeoutSec": 10
      }
    ]
  }
}